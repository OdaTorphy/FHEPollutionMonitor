{
  "name": "privacy-pollution-monitor",
  "version": "1.0.0",
  "description": "Privacy-preserving pollution monitoring system on blockchain",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:sepolia": "hardhat test --network sepolia",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "coverage": "hardhat coverage",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint scripts/ test/",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js:fix": "eslint scripts/ test/ --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js' '*.json' '*.md'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js' '*.json' '*.md'",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "typechain": "hardhat typechain",
    "size": "hardhat size-contracts",
    "security": "npm run lint:sol && npm run test:coverage",
    "ci": "npm run lint && npm run format:check && npm run test:coverage",
    "prepare": "husky"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "pollution-monitoring",
    "privacy"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.0",
    "eslint": "^9.38.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "hardhat": "2.22.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.5.0",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0"
  }
}
